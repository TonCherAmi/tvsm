;; tvsm default config file

 ;; media player command
((media-player-command . #f)
 ;; list of media formats used to distinguish media files
 ;; in show directories
 (media-format-list    . (".mkv" ".mpv" ".avi" ".mp4" ".mpeg" 
                          ".mov" ".m4v" ".svi" ".ogv" ".webm"
                          ".vob" ".flv" ".wmv" ".qt"))
 ;; path to the show database
 (show-db-path         . "$HOME/.local/share/tvsm/shows"))

